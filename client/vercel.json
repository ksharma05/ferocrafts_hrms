{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://ferocrafts-hrms.onrender.com/api/$1"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "https://ferocrafts-hrms.onrender.com/uploads/$1"
    },
    {
      "src": "/pdfs/(.*)",
      "dest": "https://ferocrafts-hrms.onrender.com/pdfs/$1"
    },
    {
      "src": "/health",
      "dest": "https://ferocrafts-hrms.onrender.com/health"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}

